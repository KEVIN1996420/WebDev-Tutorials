<!DOCTYPE html>
<html>
    <head>
        <title>DATA JAMES | Store</title>
        <meta name="description" content="This is the description">
        <link rel="stylesheet" href='styles.css' />
        <script type="text/javascript" src='store.js' async ></script>
        <script src="https://kit.fontawesome.com/e3b4d92b67.js" crossorigin="anonymous"></script>
        <script src="https://checkout.stripe.com/checkout.js" defer></script>
        <script>
            var stripePublicKey = '<%= stripePublicKey %>'
        </script>
        <script src='store.js' defer></script>

    </head>
    <body>
        <header class="main-header">
            <nav class="main-nav nav">
                <ul>
                    <li><a href="index.html"><h1 class="cell-display"> HOME </h1></a></li>
                    <li><a href="store.html"><h1 class="cell-display"> STORE </h1></a></li>
                    <li><a href="about.html"><h1 class="cell-display"> ABOUT </h1></a></li>
                    <li><a href="#cart"><i class="fas fa-shopping-basket cart-text"></i></a></li>
                </ul>
            </nav>
        </header>
        <section class="container content-section">
            <h1 class="section-header">Service Packages</h1>
            <div class="shop-items">
                <% items.packages.forEach(function(item){ %> 
                    <div class="shop-item" data-item-id = "item.id">
                        <span class="shop-item-title"><%= item.name %></span>
                        <img class="shop-item-image" src="Images/<%= item.imgName %>">
                        <div class="shop-item-details">
                            <span class="shop-item-price">$<%= item.price / 100 %></span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>

        <section class="container content-section">
            <h1 class="section-header">Hardware</h1>
            <div class="shop-items">
                <% items.hardware.forEach(function(item){ %>
                    <div class="shop-item" data-item-id = "item.id"></div> 
                        <div class="shop-item">
                            <span class="shop-item-title"><%= item.name %></span>
                            <img class="shop-item-image" src="Images/<%= item.imgName %>">
                            <div class="shop-item-details">
                                <span class="shop-item-price">$<%= item.price / 100 %></span>
                                <button class="btn btn-primary shop-item-button" type="button">ADD</button>
                            </div>
                        </div>
                <% }) %>
            </div>
        </section>

        <section id="cart" class="container content-section">
            <h1 class="section">ADD</h1>
            <div class="cart-row">
                <span class="cart-item cart-header cart-column">ITEM</span>
                <span class="cart-price cart-header cart-column">PRICE</span>
                <span class="cart-quantity cart-header cart-column">Quantit</span>
            </div>
            <div class="cart-items">
                <div class="cart-row">
                    <div class="cart-item cart-column">
                        <img class="cart-item-image" src="Images/Shirt.png" width="100" height="100">
                        <span class="cart-item-title">T-Shirt</span>
                    </div>
                    <span class="cart-price cart-column">$19.99</span>
                    <div class="cart-quantity cart-column">
                        <input class="cart-quantity-input" type="number" value="1">
                        <button class="btn btn-danger" type="button">REMOVE</button>
                    </div>
                </div>
                <div class="cart-row">
                    <div class="cart-item cart-column">
                        <img class="cart-item-image" src="Images/Album 3.png" width="100" height="100">
                        <span class="cart-item-title">Album 3</span>
                    </div>
                    <span class="cart-price cart-column">$9.99</span>
                    <div class="cart-quantity cart-column">
                        <input class="cart-quantity-input" type="number" value="2">
                        <button class="btn btn-danger" type="button">REMOVE</button>
                    </div>
                </div>
            </div>
            <div class="cart-total">
                <strong class="cart-total-title">Total</strong>
                <span class="cart-total-price">$39.97</span>
            </div>
            <div class='btn-checkout btn-purchase'>
                <div class="side default-side">Done</div>
                <div class="side hover-side">CheckOut</div>
            </div>
        </div>

        </section>
        <footer class="main-footer">
            <div class="container main-footer-container">
                <h1 class="band-name">The Generics</h1>
                <ul class="nav footer-nav">
                    <li>
                        <a href="https://www.youtube.com" target="_blank">
                            <img src="Images/YouTube Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.spotify.com" target="_blank">
                            <img src="Images/Spotify Logo.png">
                        </a>
                    </li>
                    <li>
                        <a href="https://www.facebook.com" target="_blank">
                            <img src="Images/Facebook Logo.png">
                        </a>
                    </li>
                </ul>
            </div>
        </footer>
    </body>
</html>
